<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.songdosamgyeop.order">

    <!-- 네트워크 통신 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Android 13+ 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Songdo"
        android:forceDarkAllowed="false">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Songdo.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.hq.HqActivity"
            android:exported="false" />

        <activity
            android:name=".ui.branch.BranchActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- 결제 화면 -->
        <!-- ✅ KG이니시스 테스트 결제 화면 -->
        <activity
            android:name=".payment.InicisPaymentActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Songdo">

            <!-- KG이니시스 결제 후 앱 복귀용 딥링크: songdosamgyeop://inicis/return -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="songdosamgyeop"
                    android:host="inicis"
                    android:path="/return" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.PendingApprovalActivity" />
        <!-- 기본 아이콘/색 지정 (푸시 알림 기본값) -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_notify"/>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/md_theme_primary"/>
        <!-- FCM 서비스 등록 -->
        <service
            android:name=".notify.FcmService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>
</manifest>
<!-- res/layout/item_product.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginVertical="6dp" app:strokeColor="?attr/colorOutline" app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textStyle="bold" android:textAppearance="?attr/textAppearanceTitleMedium"
                tools:text="삼겹살 500g"/>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="12,000원"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            style="@style/Widget.Material3.Button.TonalButton"
            android:text="담기"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>